{
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 100
    },
    "python.analysis.extraPaths": [
        "myapp-api/myapp_api",
        "myapp-frontend/myapp_frontend",
        "myapp-models/myapp_models"
    ],
    "pylint.importStrategy": "fromEnvironment",
    "isort.args": [
        "-l 100"
    ],
    "autopep8.args": [
        "--max-line-length=100"
    ],
    "pylint.args": [
        "--rcfile `git root`/.pylintrc"
    ],
    "poetryMonorepo.appendExtraPaths": true
}