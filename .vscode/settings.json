{
    "[markdown]": {
        "editor.wordWrap": "bounded",
        "editor.wordWrapColumn": 100
    },
    "python.analysis.extraPaths": [
        "src/frontend-common/frontend_common",
        "src/test-module/test_module",
        "docs",
        "src/frontend-main/frontend_main",
        "src/frontend-common"
    ],
    "pylint.importStrategy": "fromEnvironment",
    "isort.args": [
        "-l 100"
    ],
    "autopep8.args": [
        "--max-line-length=100"
    ],
    "pylint.args": [
        "--rcfile `git root`/.pylintrc"
    ],
    "poetryMonorepo.appendExtraPaths": true
}